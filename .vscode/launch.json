{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'lox'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=lox",
                    "--package=lox"
                ],
                "filter": {
                    "name": "lox",
                    "kind": "bin"
                },
                "env": {
                    "RUST_BACKTRACE": "full"
                }
            },
            "args": ["scripts/hello.lox", "world"],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"],
            "env": {
                "PATH": "$PATH:$HOME/.cargo/bin"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'lox'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=lox",
                    "--package=lox"
                ],
                "filter": {
                    "name": "lox",
                    "kind": "bin"
                },
                "env": {
                    "RUST_BACKTRACE": "full"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"],
            "env": {
                "PATH": "$PATH:$HOME/.cargo/bin"
            }
        }
    ]
}